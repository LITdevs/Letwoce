<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/fontawesome.min.css" asp-append-version="true"/>
    <link rel="icon" type="image/png" href="/assets/pawn.png" />
</head>
<body>
<header>
    <img src="/assets/pawn.png" alt="">
    <h1>Lettuce Fighters</h1>
    <img src="/assets/pawn.png" alt="" style="transform: scaleX(-1);">
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        <p>meow</p>
    </div>
</footer>

<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>